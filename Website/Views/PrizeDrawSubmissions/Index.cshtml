@using Application.Common;
@using Application.Services.PrizeDrawSubmissions.Read;
@model PaginationOutput<ProductPrizeDrawSubmissionReadModel>
@{
    ViewData["Title"] = "Prize Draw Submissions";
}

<div class="text-center">
    <h1 class="display-4">Prize Draw Submissions</h1>
</div>
<table class="table">
    <thead>
    <tr>
        <th scope="col">Submission Id</th>
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">Email</th>
        <th scope="col">Product S/N</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td scope="row">@item.Id</td>
                <td>@item.OwnerFirstName</td>
                <td>@item.OwnerLastName</td>
                <td>@item.OwnerEmail</td>
                <td>@item.ProductSerialNumber</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <ul class="pagination">
        @for (var i = 1; i <= Math.Ceiling((float)Model.TotalRecords/10); i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a href="/prize-draw/submissions?page=@i" class="page-link">@i</a>
            </li>
        }
    </ul>
</div>